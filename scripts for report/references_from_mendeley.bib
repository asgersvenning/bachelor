issn = {1466-822X},
journal = {Global Ecology and Biogeography},
keywords = {biodiversity equilibria,biogeography,diversity dynamics,ecological limits,extinction,latitudinal diversity gradient,macroecology,speciation,species richness patterns,species–energy relationship},
month = {oct},
