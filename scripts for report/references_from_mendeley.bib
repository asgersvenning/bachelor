issn = {2624893X},
journal = {Frontiers in Forests and Global Change},
keywords = {Forest Inventory and Analysis (FIA),National Forest System,United States Forest Service,forest assessment,forest management,forest planning,small area estimation (SAE)},
month = {dec},
pages = {198},
