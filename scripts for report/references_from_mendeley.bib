issn = {11009233},
journal = {Journal of Vegetation Science},
keywords = {Functional diversity indices,Functional similarity,Invaded communities,Invasibility,Invasive alien species,Native species},
month = {sep},
number = {5},
pages = {890--897},
title = {{Impact of plant invasions on functional diversity in the vegetation of Central Europe}},
