file = {:C\:/Users/asger/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Newbold et al. - 2012 - Mapping Functional Traits Comparing Abundance and Presence-Absence Estimates at Large Spatial Scales.pdf:pdf},
issn = {19326203},
journal = {PLoS ONE},
month = {aug},
number = {8},
pmid = {22952859},
title = {{Mapping Functional Traits: Comparing Abundance and Presence-Absence Estimates at Large Spatial Scales}},
