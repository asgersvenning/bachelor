   title = {The biogeography and filtering of woody plant functional diversity in North and South America},
   volume = {21},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1111/j.1466-8238.2011.00727.x https://onlinelibrary.wiley.com/doi/abs/10.1111/j.1466-8238.2011.00727.x https://onlinelibrary.wiley.com/doi/10.1111/j.1466-8238.2011.00727.x},
