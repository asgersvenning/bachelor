   month = {4},
   pages = {593-604},
   pmid = {30779414},
   publisher = {John Wiley & Sons, Ltd},
   title = {Traits linked with species invasiveness and community invasibility vary with time, stage and indicator of invasion in a long-term grassland experiment},
   volume = {22},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1111/ele.13220 https://onlinelibrary.wiley.com/doi/abs/10.1111/ele.13220 https://onlinelibrary.wiley.com/doi/10.1111/ele.13220},
